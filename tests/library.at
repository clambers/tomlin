[AX_INCLUDE_HEADER
[#include <iostream>
int main(void) {
  toml::object_type obj;
  obj["foo"] = toml::value<toml::string_type>("string");
  obj["bar"] = toml::value<toml::integer_type>(42);
  obj["baz"] = toml::value<toml::float_type>(3.14);
  auto obj_value = toml::value<toml::object_type>(obj);
  obj_value.dump(std::cout);
  return 0;
}
]])
